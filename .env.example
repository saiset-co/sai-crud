# Service Configuration
SERVICE_NAME=sai-service
SERVICE_VERSION=1.0.0

COLLECTION_NAME=dictionary

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8081
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120

# Logging Configuration
LOG_LEVEL=debug
LOG_OUTPUT=stdout
LOG_FORMAT=console

# API Configuration
API_MAX_PAGE_SIZE=100
API_DEFAULT_PAGE_SIZE=20

# Middleware Configuration
MIDDLEWARES_ENABLED=true
CORS_ENABLED=true
# Note: For JSON arrays in envsubst, use escaped quotes or simple format
CORS_ALLOWED_ORIGINS='["*"]'
CORS_MAX_AGE=86400
AUTH_ENABLED=true
USERNAME=user
PASSWORD=pass

# Request Logging
REQUEST_LOGGING_ENABLED=true
REQUEST_LOG_LEVEL=debug
REQUEST_LOG_HEADERS=true
REQUEST_LOG_BODY=true

# Recovery Middleware
RECOVERY_ENABLED=true
RECOVERY_STACK_TRACE=true

# Health Checks
HEALTH_ENABLED=true

# Documentation
DOCS_ENABLED=true

CLIENTS_ENABLED=true
STORAGE_URL=http://localhost:8080
STORAGE_AUTH_PROVIDER=basic
STORAGE_USERNAME=name
STORAGE_PASSWORD=pass